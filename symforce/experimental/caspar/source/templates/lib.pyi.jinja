def {{kernel.name}}(
    {% for accessor in kernel.accessors %}
    {% for arg_name, arg_type in accessor.py_sig.items() %}
    {{arg_name}}: {{ arg_type if arg_type in ["int", "float"] else "CudaArray"}},
